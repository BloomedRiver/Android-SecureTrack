<?xml version="1.0" encoding="utf-8"?><!--
   Sample data extraction rules file; uncomment and customize as necessary.
   See https://developer.android.com/about/versions/12/backup-restore#xml-changes
   for details.
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Include app preferences (non-sensitive) -->
        <include domain="sharedpref" path="preferences.xml"/>

        <!-- Exclude sensitive caches and tokens -->
        <exclude domain="sharedpref" path="com.google.firebase.messaging"/>
        <exclude domain="database" path="/"/>
        <exclude domain="external" path="/"/>
        <exclude domain="file" path="/cache/"/>
    </cloud-backup>
    <device-transfer>
        <!-- Allow preferences to transfer on device-to-device migration -->
        <include domain="sharedpref" path="preferences.xml"/>
        <!-- Keep caches and tokens excluded -->
        <exclude domain="file" path="/cache/"/>
    </device-transfer>
</data-extraction-rules>